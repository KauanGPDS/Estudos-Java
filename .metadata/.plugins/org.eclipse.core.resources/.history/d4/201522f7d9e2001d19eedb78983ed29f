package orietanacao;

public class pessoa {
	String pessoa;
	int idade;
	double peso;
	double caloriasAtual;
	int contador = 0;
	
	pessoa(){
		
	}
	pessoa(String pessoa,int idade,double peso){
		this.pessoa = pessoa;
		this.idade = idade;
		this.peso = peso;
	}
	void comer(){
		double caloriasDodia = caloriasAtual + 0;
		double calculo = caloriasAtual - caloriasDodia;
				if(calculo >= 1.0){
			System.out.println("Pessoa engordou 1kg");
			for(int i = 0; i< contador;i++) {
			peso += 1.0;
			}
			System.out.println(peso);
		}else {
			System.out.println("NÃ£o engordou nada no dia");
		}
	}
	

}
