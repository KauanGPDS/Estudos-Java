package orietanacao;

public class teste {
	public static void main(String[] args) {
		
		double caloriasAtual = 0;
		int contador = 0;
		double peso = 67.0;
		
		double caloriasDodia = caloriasAtual + 4.1;
		double calculo = caloriasAtual - caloriasDodia;
				if(calculo >= 1.0){
			System.out.println("Pessoa engordou 1kg");
			for(int i = 0; i< contador;i++) {
			peso += 1.0;
			}
			System.out.println(peso);
		}else {
			System.out.println("NÃ£o engordou nada no dia");
		}
	}

}
